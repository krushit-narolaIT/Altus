<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="https://jakarta.ee/xml/ns/jakartaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_5_0.xsd"
         version="5.0">

    <context-param>
        <param-name>db.url</param-name>
        <param-value>jdbc:mysql://localhost:3306/altus</param-value>
    </context-param>

    <context-param>
        <param-name>db.username</param-name>
        <param-value>root</param-value>
    </context-param>

    <context-param>
        <param-name>db.password</param-name>
        <param-value>password123#</param-value>
    </context-param>

    <context-param>
        <param-name>db.driver</param-name>
        <param-value>com.mysql.cj.jdbc.Driver</param-value>
    </context-param>

    <servlet>
        <servlet-name>DBConfigServlet</servlet-name>
        <servlet-class>com.krushit.servlet.DBConfigServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>DBConfigServlet</servlet-name>
        <url-pattern>/DBConfig</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DriverVerificationServlet</servlet-name>
        <servlet-class>com.krushit.servlet.DriverVerificationServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DriverVerificationServlet</servlet-name>
        <url-pattern>/DriverVerificationServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UserLogin</servlet-name>
        <servlet-class>com.krushit.servlet.UserLoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserLogin</servlet-name>
        <url-pattern>/UserLogin</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UserSignUp</servlet-name>
        <servlet-class>com.krushit.servlet.UserSignUpServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserSignUp</servlet-name>
        <url-pattern>/UserSignUp</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DriverSignUp</servlet-name>
        <servlet-class>com.krushit.servlet.DriverSignUpServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DriverSignUp</servlet-name>
        <url-pattern>/DriverSignUp</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DriverLogin</servlet-name>
        <servlet-class>com.krushit.servlet.DriverLoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DriverLogin</servlet-name>
        <url-pattern>/DriverLogin</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DriverDetailsServlet</servlet-name>
        <servlet-class>com.krushit.servlet.DriverDetailsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DriverDetailsServlet</servlet-name>
        <url-pattern>/DriverDetailsServlet</url-pattern>
    </servlet-mapping>
</web-app>